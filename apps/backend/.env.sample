TASKER_PRIMARY.ENV="local"

TASKER_SERVER.PORT="8080"
TASKER_SERVER.READ_TIMEOUT="30"
TASKER_SERVER.WRITE_TIMEOUT="30"
TASKER_SERVER.IDLE_TIMEOUT="60"
TASKER_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

TASKER_DATABASE.HOST="localhost"
TASKER_DATABASE.PORT="5432"
TASKER_DATABASE.USER="postgres"
TASKER_DATABASE.PASSWORD=""
TASKER_DATABASE.NAME="tasker"
TASKER_DATABASE.SSL_MODE="disable"
TASKER_DATABASE.MAX_OPEN_CONNS="25"
TASKER_DATABASE.MAX_IDLE_CONNS="25"
TASKER_DATABASE.CONN_MAX_LIFETIME="300"
TASKER_DATABASE.CONN_MAX_IDLE_TIME="300"

TASKER_AUTH.SECRET_KEY="secret"

TASKER_INTEGRATION.RESEND_API_KEY="resend_key"

TASKER_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# AWS CONFIGURATION
# ============================================================================

TASKER_AWS.REGION="apac"
TASKER_AWS.ACCESS_KEY_ID=""
TASKER_AWS.SECRET_ACCESS_KEY=""
TASKER_AWS.UPLOAD_BUCKET="tasker-bucket"
TASKER_AWS.ENDPOINT_URL=""


# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
TASKER_OBSERVABILITY.SERVICE_NAME="tasker"
TASKER_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
TASKER_OBSERVABILITY.LOGGING.LEVEL="debug"
TASKER_OBSERVABILITY.LOGGING.FORMAT="console"
TASKER_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
TASKER_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TASKER_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
TASKER_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
TASKER_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
TASKER_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
TASKER_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
TASKER_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
TASKER_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"