{
  "name": "@tasker/openapi",
  "version": "1.0.0",
  "description": "Generates OpenAPI doc",
  "type": "module",
  "scripts": {
    "gen": "tsx src/gen.ts",
    "build": "tsc && tsc-alias",
    "dev": "wait-on ../zod/dist/index.js && tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "clean": "rimraf dist tsconfig.tsbuildinfo .turbo node_modules"
  },
  "exports": {
    "./contracts": {
      "types": "./dist/contracts/index.d.ts",
      "default": "./dist/contract/index.js"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anatine/zod-openapi": "^2.2.7",
    "@tasker/zod": "workspace:*",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/open-api": "^3.52.1",
    "ts-pattern": "^5.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "concurrently": "^9.1.2",
    "tsc-alias": "^1.8.12",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "wait-on": "^8.0.3"
  }
}
